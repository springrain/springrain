        <io.grpc.version>1.58.0</io.grpc.version>
        <kr.motd.maven.version>1.7.1</kr.motd.maven.version>
        <!--
        <io.protostuff.version>1.8.0</io.protostuff.version>
        -->

        <zxing.version>3.5.2</zxing.version>
        <jsoup.version>1.16.1</jsoup.version>
        <xstream.version>1.4.20</xstream.version>
        <druid-spring-boot-starter.version>1.2.20</druid-spring-boot-starter.version>
        <clickhouse-jdbc.version>0.5.0</clickhouse-jdbc.version>
        <jwt.version>4.4.0</jwt.version>

        <!--3.x版本依赖jdk 14 -->
        <!--
        <fst.version>3.0.4-jdk17</fst.version>
        -->
