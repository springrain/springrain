        <guava.version>32.1.3-jre</guava.version>

        <bcprov.version>1.76</bcprov.version>

        <!-- seata分布式事务 -->
        <seata.version>1.7.1</seata.version>

        <!-- smart-doc 文档生成 -->
        <smart-doc-maven-plugin.version>2.7.7</smart-doc-maven-plugin.version>

        <lettucemod.version>3.7.3</lettucemod.version>

    </properties>


